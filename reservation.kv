
<ReservationWidget>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        adaptive_height: True

        MDLabel:
            text: 'Réservation Hôtel R&T'
            halign: 'center'
            adaptive_height: True
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1
            font_style: 'H5'

        MDTextField:
            id: nom
            hint_text: 'Nom'
            mode: 'rectangle'

        MDTextField:
            id: prenom
            hint_text: 'Prénom'
            mode: 'rectangle'

        MDTextField:
            id: email
            hint_text: 'Email'
            mode: 'rectangle'

        MDTextField:
            id: telephone
            hint_text: 'Téléphone'
            mode: 'rectangle'

        MDTextField:
            id: nbr_nuit
            hint_text: 'Nombre de nuit'
            mode: 'rectangle'
            input_filter: 'int'

        MDDropDownItem:
            id: type_chambre
            text: 'Type de chambre'
            size_hint: None, None
            size: 3 * dp(48), dp(48)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: root.menu.open()

        MDRaisedButton:
            id: dropdown_button
            text: 'Sélectionner votre type de chambre'
            size_hint: None, None
            size: 3 * dp(48), dp(48)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: root.menu.open()

        MDBoxLayout:
            adaptive_height: True

            MDSwitch:
                id: option_tv
                active: False
            MDLabel:
                text: 'TV'
            MDSwitch:
                id: option_tv
            MDLabel:
                text: 'TV'
                color: 0, 0, 0, 1
            MDSwitch:
                id: option_minibar
            MDLabel:
                text: 'Minibar'
                color: 0, 0, 0, 1
            MDSwitch:
                id: option_balcon
            MDLabel:
                text: 'Balcon vue mer'
                color: 0, 0, 0, 1
            MDSwitch:
                id: option_parking
            MDLabel:
                text: 'Place de parking'
                color: 0, 0, 0, 1

            # Répétez pour les autres options...

        MDBoxLayout:
            adaptive_height: True

            MDRaisedButton:
                text: 'Annuler'
                on_release: app.stop()

            MDRaisedButton:
                text: 'Envoyer'
                on_release: root.submit()
